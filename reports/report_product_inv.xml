<odoo>
    <record id="product_report" model="ir.actions.report">
        <field name="name">product report</field>
        <field name="model">inventory.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_inventory_product"/>
        <field name="binding_type">report</field>
        <field name="report_name">inventory_management.product_report_template</field>
    </record>

    <template id="product_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <div class="page">
                    <style>
                        .report-title {
                            text-align: center;
                            font-size: 24px;
                            color: #333;
                            margin-bottom: 20px;
                        }

                        .report-table {
                            width: 100%;
                            border-collapse: collapse;
                            margin-top: 20px;
                        }

                        .report-table th {
                            background-color: #f2f2f2;
                            padding: 10px;
                            text-align: left;
                            font-weight: bold;
                            border: 1px solid #ddd;
                        }

                        .report-table td {
                            padding: 10px;
                            border: 1px solid #ddd;
                            text-align: left;
                        }

                        .report-footer {
                            position: fixed;
                            bottom: 0;
                            left: 0;
                            width: 100%;
                            text-align: left;
                            font-size: 14px;
                            color: #666;
                            padding: 10px;
                        }
                    </style>
                    <h2 class="report-title" >Product Inventory Report</h2>

                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Quantity Available</th>
                            </tr>
                        </thead>
                        <tbody>
                             <t t-foreach="docs" t-as="rec">
                                <tr>
                                    <td><t t-esc="rec.name"/></td>
                                    <td><t t-esc="rec.category.complete_name"/></td>
                                    <td style="text-align: right;">
                                        <t t-esc="rec.quantity"/>
                                    </td>
                                </tr>
                             </t>
                        </tbody>
                    </table>

                    <div class="report-footer">
                        <p>Generated by: <strong>Inventory System</strong></p>
                        <p>Report Date:<t t-esc="rec.current_date"/></p>
                    </div>
                </div>

            </t>
        </t>

    </template>


</odoo>