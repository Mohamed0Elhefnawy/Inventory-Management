<odoo>
    <record id="reorder_report" model="ir.actions.report">
        <field name="name">reorder report</field>
        <field name="model">inventory.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_inventory_product"/>
        <field name="binding_type">report</field>
        <field name="report_name">inventory_management.reorder_level_report_template</field>
    </record>

    <template id="reorder_level_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <style>
                    table {
                        width: 100%;
                        border-collapse: collapse;
                        margin-bottom: 20px;
                    }
                    th, td {
                        border: 1px solid black;
                        text-align: left;
                        padding: 8px;
                    }
                    th {
                        background-color: #f2f2f2;
                    }
                    .no-products-message {
                        text-align: center;
                        font-size: 16px;
                        color: #ff0000;
                        font-weight: bold;
                        margin-top: 20px;
                    }
                    .report-footer {
                            position: fixed;
                            bottom: 0;
                            left: 0;
                            width: 100%;
                            text-align: left;
                            font-size: 14px;
                            color: #666;
                            padding: 10px;
                    }
                </style>

                <div class="container">

                    <table>
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Available Quantity</th>
                                <th>Minimum Required Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="rec">
                                <t t-if="rec.quantity &lt; rec.reorder_level">
                                    <tr>
                                        <td t-esc="rec.name"/>
                                        <td t-esc="rec.category.complete_name"/>
                                        <td t-esc="rec.quantity"/>
                                        <td t-esc="rec.reorder_level"/>
                                    </tr>
                                </t>
                            </t>
                            <t t-if="not docs.filtered(lambda p: p.quantity &lt; p.reorder_level)">
                                <tr>
                                    <td colspan="4" class="no-products-message">
                                        No products with low stock available.
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div class="report-footer">
                        <p>Generated by: <strong>Inventory System</strong></p>
                        <p>Report Date:<t t-esc="rec.current_date"/></p>
                </div>
            </t>
        </t>
    </template>

</odoo>